{% extends 'AdminBundle:Base:base.html.twig' %}

{% block title %}StartPack | Admin - Login{% endblock %}

{% block css %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/cms/css/bootstrap-wysihtml5-0.0.2.css') }}"></link>
{% endblock %}

{% block js %}
<script src="{{ asset('bundles/cms/js/wysihtml5-0.3.0_rc2.min.js') }}"></script>
<script src="{{ asset('bundles/cms/js/bootstrap-wysihtml5-0.0.2.min.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="row">
    	<div class="span12">
            <div class="page-header">
                <h3 class="fLeft">Page: {{ page.name }} <span class="tSilver tFontSize12px">(/page/{{ page.slug }})</span></h3>
                <br class="sep" />
            </div>

            <table id="myTable" class="tablesorter"> 
                <thead> 
                    <tr> 
                        <th width="10">ID</th>
                        <th>Module</th>
                        <th width="10">Colonne</th>
                        <th width="70">Action</th> 
                    </tr>
                </thead> 
                <tbody>
                    {% for pageModule in page.pageModules %}
                        <tr>
                            <td>{{ pageModule.id }}</td>
                            <td>{{ pageModule.module.nom }}</td>
                            <td>{{ pageModule.colonneId }}</td>
                            <td><a href="{{ path('admin_cms_view', {'id': page.id}) }}"><i class="icon-eye-open"></i></a> <a href="{{ path('admin_cms_module_edit', {'id_page': page.id, 'id_page_module': pageModule.id}) }}"><i class="icon-pencil"></i></a> <a href=""><i class="icon-trash"></i></a></td>
                        </tr>
                    {% endfor %}
                </tbody> 
            </table>

            <p align="right">
                <a href="{{ path('admin_cms_index') }}" class="btn">Retour</a>
            </p>

		</div>
	</div>

    <script type="text/javascript">
        $(document).ready(function() { 
            $("#myTable").tablecloth({
                theme: "stats",
                striped: true,
                sortable: true,
                condensed: false,
                bordered: false,
                clean: false
            });
        }); 
    </script>
{% endblock %}