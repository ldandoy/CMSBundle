{% extends 'AdminBundle:Base:base.html.twig' %}

{% block title %}StartPack | Admin - Login{% endblock %}

{% block css %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/cms/css/bootstrap-wysihtml5-0.0.2.css') }}"></link>
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/cms/css/jquery.Jcrop.min.css') }}"></link>
{% endblock %}

{% block js %}
<script src="{{ asset('bundles/cms/js/wysihtml5-0.3.0_rc2.min.js') }}"></script>
<script src="{{ asset('bundles/cms/js/bootstrap-wysihtml5-0.0.2.min.js') }}"></script>
<script src="{{ asset('bundles/cms/js/jquery.Jcrop.min.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="row">
    	<div class="span12">
            <div class="page-header">
                <h3 class="fLeft">Edition du module: {{ pageModule.module.nom }}</h3>
                <div class="fRight marginTop20px">
                    <a href="{{ path('page', {'slug': page.slug} ) }}" target="_blanck" class="btn btn-info">Voir le site</a>
                </div>
                <br class="sep" />
            </div>

            <form action="{{ path('admin_cms_module_edit', {'id_page': page.id, 'id_page_module': pageModule.id}) }}" method="POST">
                {% include "CMSBundle:AdminCMS:block_form.html.twig" %}
                <p align="right">
                    <button class="btn btn-success">Enregistrer</button> <a href="{{ path('admin_cms_view', {'id': page.id}) }}" class="btn">Retour</a>
                </p>
            </form>
		</div>
	</div>

    <script type="text/javascript">
        $('#some-textarea').wysihtml5();
    </script>
{% endblock %}